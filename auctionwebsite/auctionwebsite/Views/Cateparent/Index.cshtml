@model IEnumerable<auctionwebsite.Models.Cateparent>

@{
    ViewBag.Title = "Danh mục";
    Layout = "~/Views/Shared/admin_layout.cshtml";
}
<p>
    @Html.ActionLink("Tạo danh mục mới", "Create")
</p>


<div class="panel panel-default">
    <div class="panel-body">
        <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                <thead>
                    <tr>
                        <th>Tên danh mục</th>
                        <th>Sửa</th>
                        <th>Xóa</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr class="odd gradeX">
                            <td>@Html.DisplayFor(modelItem => item.CateparentName)</td>
                            <td>@Html.ActionLink("Sửa", "Edit", new { id = item.CateparentID })</td>
                            <td>@Html.ActionLink("Xóa", "Delete", new { id = item.CateparentID })</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        </div>
    </div>
