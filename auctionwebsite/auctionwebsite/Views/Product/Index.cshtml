@model IEnumerable<auctionwebsite.Models.Product>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Cate.CateName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductSoldPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductDes)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductDateSold)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserUploadID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserBuyID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductPointRequired)
            </th>
            <th></th>
        </tr>
    
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Cate.CateName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProductName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProductPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProductSoldPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProductDes)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProductDateSold)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserUploadID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserBuyID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProductPointRequired)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id=item.ProductID }) |
                @Html.ActionLink("Details", "Details", new { id=item.ProductID }) |
                @Html.ActionLink("Delete", "Delete", new { id=item.ProductID })
            </td>
        </tr>
    }
    
    </table>
</body>
</html>
