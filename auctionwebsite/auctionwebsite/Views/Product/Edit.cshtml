@model auctionwebsite.Models.Product

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit</title>
</head>
<body>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        
        <div class="form-horizontal">
            <h4>Product</h4>
            <hr />
            @Html.ValidationSummary(true)
            @Html.HiddenFor(model => model.ProductID)
    
            <div class="form-group">
                @Html.LabelFor(model => model.ProductName, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.ProductName)
                    @Html.ValidationMessageFor(model => model.ProductName)
                </div>
            </div>
    
            <div class="form-group">
                @Html.LabelFor(model => model.ProductPrice, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.ProductPrice)
                    @Html.ValidationMessageFor(model => model.ProductPrice)
                </div>
            </div>
    
            <div class="form-group">
                @Html.LabelFor(model => model.ProductSoldPrice, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.ProductSoldPrice)
                    @Html.ValidationMessageFor(model => model.ProductSoldPrice)
                </div>
            </div>
    
            <div class="form-group">
                @Html.LabelFor(model => model.ProductDes, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.ProductDes)
                    @Html.ValidationMessageFor(model => model.ProductDes)
                </div>
            </div>
    
            <div class="form-group">
                @Html.LabelFor(model => model.ProductDateSold, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.ProductDateSold)
                    @Html.ValidationMessageFor(model => model.ProductDateSold)
                </div>
            </div>
    
            <div class="form-group">
                @Html.LabelFor(model => model.CateID, "CateID", new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownList("CateID", String.Empty)
                    @Html.ValidationMessageFor(model => model.CateID)
                </div>
            </div>
    
            <div class="form-group">
                @Html.LabelFor(model => model.UserUploadID, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.UserUploadID)
                    @Html.ValidationMessageFor(model => model.UserUploadID)
                </div>
            </div>
    
            <div class="form-group">
                @Html.LabelFor(model => model.UserBuyID, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.UserBuyID)
                    @Html.ValidationMessageFor(model => model.UserBuyID)
                </div>
            </div>
    
            <div class="form-group">
                @Html.LabelFor(model => model.ProductPointRequired, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.ProductPointRequired)
                    @Html.ValidationMessageFor(model => model.ProductPointRequired)
                </div>
            </div>
    
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Save" class="btn btn-default" />
                </div>
            </div>
        </div>
    }
    
    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>
</body>
</html>
